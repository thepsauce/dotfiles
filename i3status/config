# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ÃŸ
# If the above line is not correctly displayed, fix your editor first!

general {
	interval = 5
	colors = true
	color_good="#FFFFFF"
	color_degraded="#ffd75f"
	color_bad="#d75f5f"
}

order += "volume master"
order += "wireless wlp3s0"
order += "disk /"
order += "disk /home"
order += "cpu_usage"
order += "load"
order += "tztime local"

tztime local {
	format = " %Y-%m-%d %H:%M:%S "
}

wireless wlp3s0 {
	format_up = "WLAN: %ip"
	format_down  = "WLAN: down"
} 

disk "/home" {
	format = " %avail "
	prefix_type = "decimal"
}

disk "/" {
	format = " %avail "
	prefix_type = "decimal"
}

cpu_usage {
	format = " %usage "
}

load {
	format = " %5min 5min "
}

volume master {
	format = " %volume "
	format_muted = " %volume "
	device = "default"
	mixer = "Master"
	mixer_idx = 0
}
